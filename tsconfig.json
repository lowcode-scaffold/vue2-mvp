{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"jsxFactory": "VueTsxSupport",
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"sourceRoot": "./sourcemap/",
		"allowJs": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"types": [
			"webpack-env",
			"mocha",
			"chai"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"files": [
		"node_modules/vue-tsx-support/enable-check.d.ts",
		"node_modules/vue-tsx-support/options/allow-unknown-props.d.ts"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}